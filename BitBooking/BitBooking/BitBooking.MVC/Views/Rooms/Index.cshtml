@model IEnumerable<BitBooking.DAL.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Accomodation.AccomodationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType.RoomTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomCapacity)
            </th>
            <th></th>
        </tr>  
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color:black">
                <td>
                    @Html.DisplayFor(modelItem => item.Accomodation.AccomodationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType.RoomTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfRooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomCapacity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RoomId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RoomId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RoomId })
                </td>
            </tr>
        }
    </tbody>   

</table>
@section Scripts{

    <script>
    $(document).ready( function () {
    $('#table_id').DataTable();
} );


    </script>

}
