<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />
</head>

<body ng-app="app">

    <!-- header-top -->
    <div class="header-top">
        <!-- container -->
        <div class="container">
            <div class="header-top-left">
                <div class="signin">
                    <div ng-controller="NavbarController as navCtrl">
                        <a ui-sref="home" class="play-icon btn btn-default" style="margin-right:5px">
                        Home</a>
                        <a ng-show="!navCtrl.userService.isLoggedIn && !navCtrl.userService.isSeller" class=" btn btn-default" bs-aside="aside" ui-sref="register" style="margin-right:5px">
                            Register
                        </a>
                        <a ng-show="!navCtrl.userService.isLoggedIn && !navCtrl.userService.isSeller" ui-sref="login" class="btn btn-default" style="margin-right:5px">
                            Sign In
                        </a>
                        <a ng-show="navCtrl.userService.isLoggedIn || navCtrl.userService.isSeller" ng-click="navCtrl.userService.inbox()" class="play-icon btn btn-default " style="margin-right:5px">
                            Messages <i ng-show="navCtrl.userService.hasNewMessage=='True'" class="badge danger">NEW</i> 
                        </a>
                        <a ng-show="navCtrl.userService.isLoggedIn" ng-click="navCtrl.userService.profile()" class=" play-icon btn btn-default" style=" margin-right:5px">
                        {{navCtrl.userService.username}}</a>
                        <a ng-show="navCtrl.userService.isSeller" ui-sref="manager" class="play-icon btn btn-default" style="margin-right:5px">
                        Administration Panel</a>
                        <a ng-show="navCtrl.userService.isLoggedIn || navCtrl.userService.isSeller" ng-click="navCtrl.userService.logout()" class="play-icon btn btn-default" style="margin-right:5px">
                            LogOut
                        </a>
                    </div>
                </div>

                <div class="clearfix"> </div>
            </div>
            <div class="header-top-right">

                <ul>
                    <li><a href="https://twitter.com/BITCamp_ba" class="twitter"> </a></li>
                    <li><a href="https://www.facebook.com/bitcamp.ba" class="twitter facebook"> </a></li>
                    <li><a href="https://www.google.ba" class="twitter chrome"> </a></li>
                    <li><a href="https://dribbble.com/" class="twitter dribbble"> </a></li>
                    <li><a href="https://www.pinterest.com/webtress/travel-accommodation-resorts-villas-bungalows-bed-/" class="twitter pinterest"> </a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="mainbody">
        <div growl></div>
        @RenderBody()
    </div>
    <div class="container body-content">

        <hr />
        <footer>
            <!-- footer -->
            <div class="footer" id="addressLink">
                <!-- container -->
                <div class="container">
                    <div class="footer-top">
                        <div class="footer-grids">
                            <div class="col-md-8 footer-logo">
                                <img src="~/Images/Untitled-2.png" width="390" height="90" style="position:absolute; right:320px; top:60px" border=0 alt="this is our logo" />

                            </div>
                            <div class="col-md-4 f-address">
                                <h5>Address</h5>
                                <ul>
                                    <li>BitCampovskih kodova no. 101</li>
                                    <li>Bosnia and Herzegovina</li>
                                    <li>Telephone: +1 234 567 9871</li>
                                    <li>FAX: +1 234 567 9871</li>
                                    <li>E-mail : <a href="mailto:example@email.com">BitBooking@bitcamp.ba</a></li>
                                </ul>
                            </div>

                            <div class="clearfix"> </div>
                        </div>
                        <div class="footer-bottom">
                            <div class="footer-nav">
                                <ul>
                                    <li><a ui-sref="home">Home</a></li>
                                    <li><a ui-sref="about">About Us</a></li>
                                </ul>
                            </div>
                            <div class="copyright">
                                <p>Copyrights © 2015 Travlio . Design by <a href="http://w3layouts.com/">W3layouts</a></p>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>
                <!-- //container -->
            </div>
            <!-- //footer -->
        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="http://maps.google.com/maps/api/js"></script>

    <!--NEW BUNDLES ANGULAR - START-->
    @Scripts.Render("~/bundlesAngular")
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.9/angular-touch.min.js"></script>

    @Scripts.Render("~/bundlesAngularThrdParty")
    @Scripts.Render("~/bundlesAccomodation")
 
    <!--NEW BUNDLES ANGULAR - END -->
    @Scripts.Render("~/ScriptsAndThemes")

    @RenderSection("scripts", required: false)
    <script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js">

    </script>
</body>
</html>
